<div class='row'>
  <div class='col-auto'>
    <h2>Welcome!</h2>
    <div class='form category-add-form'>
      <label for='category-name'>Category name:</label>
      <input class='form-input' type='text' id='category-name' />

      <button
        id='add-Category-btn'
        data-category='adding-category'
        class='btn btn-primary'
        type='submit'
      >ADD CATEGORY</button>
    </div>
  </div>
</div>
<div class='row mt-4'>
  <div class='col-md-12'>
    {{#if allCategories.length}}
      <div class='col-md-12 project-list'>
        <h3>Categories</h3>

        {{#each allCategories as |category|}}
          <div class='card' id='category-card'>
            <div class='row mb-2'>
              <h4 id='category title'><a
                  href='/api/categories/{{category.id}}/plants'
                >{{category.name}}</a></h4>
            </div>
            <div class='card-body'>
              {{!--   <button class='btn btn-outline-warning' id='catupdate-btn' data-id='{{category.id}}'>UPDATE</button> --}}
              <button
                class='btn btn-danger'
                id='catdelete-btn'
                data-id='{{category.id}}'
              >DELETE</button>
            </div>
          </div>

        {{/each}}
      </div>
    {{/if}}

  </div>
</div>

